<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="voice_capture_expense"
        android:enabled="true"
        android:shortcutShortLabel="Registrar despesa"
        android:shortcutLongLabel="Registrar despesa por voz"
        android:shortcutDisabledMessage="Atalho indisponivel">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="desquadra://voice?intent=expense&amp;source=assistant" />
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <parameter
                android:name="feature"
                android:value="voice_capture_expense" />
        </capability-binding>
    </shortcut>
</shortcuts>
