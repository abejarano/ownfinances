import "package:flutter/material.dart";
import "package:ownfinances/core/presentation/components/buttons.dart";
import "package:ownfinances/core/theme/app_theme.dart";
import "package:ownfinances/core/utils/formatters.dart";
import "package:ownfinances/l10n/app_localizations.dart";

class BudgetSummaryTab extends StatelessWidget {
  final double plannedExpense;
  final double plannedIncome;
  final double plannedDebt;
  final double? estimatedAvailable;
  final String primaryCurrency;
  final String? otherDebtCurrenciesText;
  final VoidCallback onSave;

  const BudgetSummaryTab({
    super.key,
    required this.plannedExpense,
    required this.plannedIncome,
    required this.plannedDebt,
    required this.estimatedAvailable,
    required this.primaryCurrency,
    required this.otherDebtCurrenciesText,
    required this.onSave,
  });

  @override
  Widget build(BuildContext context) {
    final l10n = AppLocalizations.of(context)!;

    // Logic: balance and state
    final balance = estimatedAvailable ?? 0.0;
    // We consider it "neutral" if it's 0 or very close to 0 (e.g. floating point epsilon)
    final isNeutral = balance.abs() < 0.01;
    final isPositive = !isNeutral && balance > 0;
    final isNegative = !isNeutral && balance < 0;

    return Stack(
      children: [
        SingleChildScrollView(
          padding: const EdgeInsets.fromLTRB(
            AppSpacing.md,
            AppSpacing.md,
            AppSpacing.md,
            100, // Space for the bottom button
          ),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.stretch,
            children: [
              // 1) Main Card: "Me alcanza?"
              _MainCard(
                l10n: l10n,
                balance: balance,
                currency: primaryCurrency,
                isPositive: isPositive,
                isNegative: isNegative,
                isNeutral: isNeutral,
                mixedCurrencies: estimatedAvailable == null,
              ),
              const SizedBox(height: AppSpacing.md),

              // 2) Breakdown Card: "De donde sale?"
              _BreakdownCard(
                l10n: l10n,
                income: plannedIncome,
                expense: plannedExpense,
                debt: plannedDebt,
                currency: primaryCurrency,
                otherCurrenciesText: otherDebtCurrenciesText,
              ),

              // 3) Help Card: "Para que te alcance" (Only if negative)
              if (isNegative) ...[
                const SizedBox(height: AppSpacing.md),
                _HelpCard(
                  l10n: l10n,
                  balance: balance,
                  currency: primaryCurrency,
                ),
              ],
            ],
          ),
        ),

        // 4) Persistent Save Button
        Positioned(
          left: AppSpacing.md,
          right: AppSpacing.md,
          bottom: 0,
          child: SafeArea(
            top: false,
            child: Container(
              padding: const EdgeInsets.only(bottom: AppSpacing.md),
              child: Column(
                mainAxisSize: MainAxisSize.min,
                children: [
                  PrimaryButton(
                    label: l10n.budgetsSavePlanButton,
                    onPressed: onSave,
                    fullWidth: true,
                  ),
                  const SizedBox(height: 8),
                  Text(
                    l10n.budgetsSavePlanMicrocopy,
                    style: TextStyle(
                      fontSize: 12,
                      color: AppColors.textTertiary,
                    ),
                    textAlign: TextAlign.center,
                  ),
                ],
              ),
            ),
          ),
        ),
      ],
    );
  }
}

class _MainCard extends StatelessWidget {
  final AppLocalizations l10n;
  final double balance;
  final String currency;
  final bool isPositive;
  final bool isNegative;
  final bool isNeutral;
  final bool mixedCurrencies;

  const _MainCard({
    required this.l10n,
    required this.balance,
    required this.currency,
    required this.isPositive,
    required this.isNegative,
    required this.isNeutral,
    required this.mixedCurrencies,
  });

  @override
  Widget build(BuildContext context) {
    Color backgroundColor;
    Color textColor;
    String statusTitle;
    String amountText;
    String ctaLabel;

    // Handle mixed currencies edge case (not fully specified but shouldn't crash)
    if (mixedCurrencies) {
      backgroundColor = AppColors.surface1;
      textColor = AppColors.textPrimary;
      statusTitle = l10n.budgetsStatusJustRight; // Fallback
      amountText = l10n.budgetsAmountZero; // Fallback
      ctaLabel = l10n.budgetsCtaReview;
    } else if (isPositive) {
      backgroundColor = AppColors.successSoft;
      textColor = AppColors.success;
      statusTitle = l10n.budgetsStatusEnough;
      amountText = l10n.budgetsAmountLeftover(currency, formatMoney(balance));
      ctaLabel = l10n.budgetsCtaSaveGoal;
    } else if (isNegative) {
      backgroundColor = AppColors.dangerSoft;
      textColor = AppColors.danger;
      statusTitle = l10n.budgetsStatusNotEnough;
      amountText = l10n.budgetsAmountShort(
        currency,
        formatMoney(balance.abs()),
      );
      ctaLabel = l10n.budgetsCtaAdjust;
    } else {
      // Neutral
      backgroundColor = AppColors.warningSoft;
      textColor = AppColors.textPrimary;
      statusTitle = l10n.budgetsStatusJustRight;
      amountText = l10n.budgetsAmountZero;
      ctaLabel = l10n.budgetsCtaReview;
    }

    return Card(
      color: backgroundColor,
      elevation: 0,
      shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
      child: Padding(
        padding: const EdgeInsets.all(AppSpacing.lg),
        child: Column(
          children: [
            Text(
              l10n.budgetsSummaryAffordTitle,
              style: TextStyle(
                fontSize: 16,
                fontWeight: FontWeight.w500,
                color: textColor.withOpacity(0.8),
              ),
            ),
            const SizedBox(height: AppSpacing.sm),

            // Status Big (Icon + Text maybe? User just said "State large")
            // Let's just use large text.
            Text(
              statusTitle,
              style: TextStyle(
                fontSize: 24,
                fontWeight: FontWeight.bold,
                color: textColor,
              ),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: AppSpacing.xs),

            // Amount Big sentence
            Text(
              amountText,
              style: TextStyle(
                fontSize: 18,
                fontWeight: FontWeight.w600,
                color: textColor,
              ),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: AppSpacing.md),

            // Mini Explanation
            Text(
              l10n.budgetsSummaryAffordOneLine,
              style: TextStyle(fontSize: 12, color: textColor.withOpacity(0.7)),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: AppSpacing.xs),

            // Calming phrase
            Text(
              l10n.budgetsSummaryAffordCalming,
              style: TextStyle(
                fontSize: 12,
                color: textColor.withOpacity(0.7),
                fontStyle: FontStyle.italic,
              ),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: AppSpacing.lg),

            // Single Main CTA
            SizedBox(
              width: double.infinity,
              child: ElevatedButton(
                onPressed: () {
                  // Functionality not strictly defined, but "Adjust" acts as "Go back/Review"
                  // For now, we can just trigger the same save action or print?
                  // Or maybe do nothing if it's just a visual CTA.
                  // The user said "Adjust my plan". This implies navigation.
                  // But for this task, I will leave it empty or print.
                  debugPrint("CTA Clicked: $ctaLabel");
                },
                style: ElevatedButton.styleFrom(
                  backgroundColor: textColor,
                  foregroundColor: backgroundColor,
                  elevation: 0,
                  padding: const EdgeInsets.symmetric(vertical: 16),
                  shape: RoundedRectangleBorder(
                    borderRadius: BorderRadius.circular(12),
                  ),
                ),
                child: Text(
                  ctaLabel,
                  style: const TextStyle(
                    fontWeight: FontWeight.bold,
                    fontSize: 16,
                  ),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}

class _BreakdownCard extends StatelessWidget {
  final AppLocalizations l10n;
  final double income;
  final double expense;
  final double debt;
  final String currency;
  final String? otherCurrenciesText;

  const _BreakdownCard({
    required this.l10n,
    required this.income,
    required this.expense,
    required this.debt,
    required this.currency,
    this.otherCurrenciesText,
  });

  @override
  Widget build(BuildContext context) {
    return Card(
      elevation: 0,
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(12),
        side: BorderSide(color: AppColors.borderSoft),
      ),
      child: Padding(
        padding: const EdgeInsets.all(AppSpacing.md),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              l10n.budgetsSummaryBreakdownTitle,
              style: Theme.of(
                context,
              ).textTheme.titleSmall?.copyWith(fontWeight: FontWeight.bold),
            ),
            const SizedBox(height: AppSpacing.md),

            // Income
            _BreakdownRow(
              label: l10n.budgetsSummaryPlannedIncome,
              amount: income,
              currency: currency,
              color: AppColors.success,
            ),
            const SizedBox(height: AppSpacing.sm),

            // Expense
            _BreakdownRow(
              label: l10n.budgetsSummaryPlannedExpense,
              amount: expense,
              currency: currency,
              color: AppColors.danger,
            ),
            const SizedBox(height: AppSpacing.sm),

            // Debt
            _BreakdownRow(
              label: l10n.budgetsSummaryPlannedDebts,
              amount: debt,
              currency: currency,
              color: AppColors.danger, // Debt is also outflow
            ),

            if (otherCurrenciesText != null) ...[
              const SizedBox(height: AppSpacing.sm),
              Text(
                "${l10n.budgetsMonthSummaryOtherCurrencies}: $otherCurrenciesText",
                style: const TextStyle(
                  fontSize: 12,
                  color: AppColors.textTertiary,
                ),
              ),
            ],
          ],
        ),
      ),
    );
  }
}

class _BreakdownRow extends StatelessWidget {
  final String label;
  final double amount;
  final String currency;
  final Color? color;

  const _BreakdownRow({
    required this.label,
    required this.amount,
    required this.currency,
    this.color,
  });

  @override
  Widget build(BuildContext context) {
    return Row(
      mainAxisAlignment: MainAxisAlignment.spaceBetween,
      children: [
        Text(label, style: const TextStyle(color: AppColors.textSecondary)),
        Text(
          formatCurrency(amount, currency),
          style: TextStyle(
            fontWeight: FontWeight.w600,
            color: color ?? AppColors.textPrimary,
          ),
        ),
      ],
    );
  }
}

class _HelpCard extends StatelessWidget {
